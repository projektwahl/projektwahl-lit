{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "trailingComma": "all",
      "quoteProperties": "asNeeded",
      "quoteStyle": "double",
      "semicolons": "always"
    }
  }
}