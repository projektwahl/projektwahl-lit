{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "importsNotUsedAsValues": "error",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "useDefineForClassFields": false,
    "strictNullChecks": true,
    "keyofStringsOnly": true
  },
  "include": ["**/*.ts", "**/*.js"]
}
