{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "strict": true,
    "importsNotUsedAsValues": "error",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "useDefineForClassFields": false,
    "strictNullChecks": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "rootDir": "src/",
    "outDir": "dist/",
  },
  "include": ["src/**/*.ts"]
}
