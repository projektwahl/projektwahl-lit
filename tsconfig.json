{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "strict": true,
    "importsNotUsedAsValues": "error",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "useDefineForClassFields": false,
    "strictNullChecks": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": "dist/",
    "disableSizeLimit": true
  },
  "ts-node": {
    "swc": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "stacktrace-source-map.js",
    "build.js",
    "require-shim.js",
    "src/loader.js",
    "csv2json.js",
    "jsonaddage.js"
  ]
}
