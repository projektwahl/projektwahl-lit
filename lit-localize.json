{
  "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
  "sourceLocale": "en",
  "targetLocales": ["de", "de-aes"],
  "tsConfig": "./tsconfig.json",
  "inputFiles": ["./src/client/**/*.ts"],
  "output": {
    "outputDir": "./src/client/generated_locales/",
    "mode": "runtime",
    "localeCodesModule": "./src/client/generated_locales/locales.js"
  },
  "interchange": {
    "format": "xliff",
    "xliffDir": "./src/client/xliff/"
  }
}
