{
  "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
  "sourceLocale": "en",
  "targetLocales": ["de"],
  "tsConfig": "./tsconfig.json",
  "output": {
    "mode": "runtime",
    "outputDir": "src/client/generated",
    "localeCodesModule": "src/client/generated/locales.ts"
  },
  "interchange": {
    "format": "xliff",
    "xliffDir": "xliff"
  }
}
