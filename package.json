    "name": "Moritz Hedtke",
    "email": "Moritz.Hedtke@t-online.de"
  },
  "bugs": {
    "url": "https://github.com/mohe2015/projektwahl-lit/issues"
  },
  "homepage": "https://github.com/mohe2015/projektwahl-lit",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohe2015/projektwahl-lit.git"
  },
  "description": "Software to manage choosing projects and automatically assigning people to projects.",
  "type": "module",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint .",
    "fix:lint": "eslint --fix .",
    "setup": "node ./src/server/setup.js",
    "server": "node --enable-source-maps --experimental-import-meta-resolve ./src/server/index.js",
    "localize-extract": "lit-localize extract",
    "localize-build": "lit-localize build",
    "serve": "esbuild --outdir=src/ --outbase=src/ src/**/*.ts --sourcemap --watch",
    "build": "esbuild --format=esm --bundle src/client/pw-app.ts --sourcemap --splitting --analyze --outdir=dist --minify-whitespace --minify-identifiers --minify-syntax --tree-shaking=true --minify"
  },
  "dependencies": {
    "@lit-labs/motion": "^1.0.1",
    "@lit-labs/ssr": "^1.0.0",
    "@lit-labs/task": "^1.0.0",
    "@lit/localize": "^0.11.1",
    "esbuild": "^0.14.8",
    "js-cookie": "^3.0.1",
    "lit": "^2.0.2",
    "openid-client": "^5.1.1",
    "postgres": "mohe2015/postgres#patch-1",
    "zod": "^3.11.6"
  },
  "dependenciesComments": {
    "hot-esm": "1.2.2",
    "lit": "monorepos can't be installed from git afaik and also it probably doesnt work by default",
    "postgres": "v2.0.0-beta.11",
    "typescript": "installing the dependencies is probably more dangerous...",
    "zod": "doesn't work from git because no prepare script. Should probably be installable without any building"
  },
  "devDependencies": {
    "@lit/localize-tools": "^0.5.0",
    "@types/js-cookie": "^3.0.1",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "typescript": "^4.5.4"
  }
}
