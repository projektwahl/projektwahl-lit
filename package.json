{
  "name": "projektwahl-lit",
  "version": "0.0.1",
  "license": "AGPL-3.0-or-later",
  "author": {
    "name": "Moritz Hedtke",
    "email": "Moritz.Hedtke@t-online.de"
  },
  "bugs": {
    "url": "https://github.com/mohe2015/projektwahl-lit/issues"
  },
  "homepage": "https://github.com/mohe2015/projektwahl-lit",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohe2015/projektwahl-lit.git"
  },
  "description": "Software to manage choosing projects and automatically assigning people to projects.",
  "type": "module",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint .",
    "fix:lint": "eslint --fix .",
    "setup": "node --experimental-loader ./src/loader.js --enable-source-maps ./src/server/setup.js",
    "server": "node --experimental-loader ./src/loader.js --enable-source-maps --experimental-import-meta-resolve ./src/server/index.js",
    "localize-extract": "lit-localize extract",
    "localize-build": "lit-localize build",
    "build": "esbuild --format=esm --bundle src/client/pw-app.ts --charset=utf8 --define:window.PRODUCTION=true --entry-names=[dir]/[name]-[hash] --sourcemap --analyze --outdir=dist --minify-whitespace --minify-identifiers --minify-syntax --tree-shaking=true --minify",
    "purgecss": "purgecss --css node_modules/bootstrap/dist/css/bootstrap.css --content dist/*.js --output dist/bootstrap.min.css --font-face --keyframes --variables"
  },
  "dependencies": {
    "@lit-labs/task": "^1.1.0",
    "@lit/localize": "^0.11.1",
    "argon2": "^0.28.3",
    "bootstrap": "^5.1.3",
    "cookie": "^0.4.1",
    "js-cookie": "^3.0.1",
    "lit": "^2.1.1",
    "openid-client": "^5.1.1",
    "postgres": "mohe2015/postgres#patch-1",
    "zod": "^3.11.6"
  },
  "dependenciesComments": {
    "hot-esm": "1.2.2",
    "lit": "monorepos can't be installed from git afaik and also it probably doesnt work by default",
    "postgres": "v2.0.0-beta.11",
    "typescript": "installing the dependencies is probably more dangerous...",
    "zod": "doesn't work from git because no prepare script. Should probably be installable without any building"
  },
  "devDependencies": {
    "@lit/localize-tools": "^0.5.0",
    "@types/cookie": "^0.4.1",
    "@types/js-cookie": "^3.0.1",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "esbuild": "^0.14.10",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "purgecss": "^4.1.3",
    "typescript": "^4.5.4"
  }
}
