{
  "name": "projektwahl-lit",
  "version": "0.0.1",
  "license": "AGPL-3.0-or-later",
  "author": {
    "name": "Moritz Hedtke",
    "email": "Moritz.Hedtke@t-online.de"
  },
  "bugs": {
    "url": "https://github.com/mohe2015/projektwahl-lit/issues"
  },
  "homepage": "https://github.com/mohe2015/projektwahl-lit",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohe2015/projektwahl-lit.git"
  },
  "description": "Software to manage choosing projects and automatically assigning people to projects.",
  "type": "module",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint .",
    "fix:lint": "eslint --fix .",
    "setup": "node --experimental-loader ./src/loader.js ./src/server/setup.js",
    "server": "node --experimental-loader ./src/loader.js --enable-source-maps --experimental-import-meta-resolve ./src/server/index.js",
    "localize-extract": "lit-localize extract",
    "localize-build": "lit-localize build",
    "build": "esbuild --format=esm --bundle src/client/pw-app.ts --entry-names=[dir]/[name]-[hash] --charset=utf8 --define:PRODUCTION=true --sourcemap --splitting --analyze --outdir=dist --minify-whitespace --minify-identifiers --minify-syntax --tree-shaking=true --minify",
    "terser": "npx terser --compress passes=2,unsafe --mangle --module --toplevel --mangle-props --output dist/pw-app-MIQETEFA-terser.js -- dist/pw-app-MIQETEFA.js",
    "rollup": "rollup -c"
  },
  "dependencies": {
    "@lit-labs/motion": "^1.0.1",
    "@lit-labs/ssr": "^1.0.0",
    "@lit-labs/task": "^1.0.0",
    "@lit/localize": "^0.11.1",
    "argon2": "^0.28.3",
    "cookie": "^0.4.1",
    "js-cookie": "^3.0.1",
    "lit": "^2.0.2",
    "openid-client": "^5.1.1",
    "postgres": "mohe2015/postgres#patch-1",
    "zod": "^3.11.6"
  },
  "dependenciesComments": {
    "hot-esm": "1.2.2",
    "lit": "monorepos can't be installed from git afaik and also it probably doesnt work by default",
    "postgres": "v2.0.0-beta.11",
    "typescript": "installing the dependencies is probably more dangerous...",
    "zod": "doesn't work from git because no prepare script. Should probably be installable without any building"
  },
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "^0.27.0",
    "@lit/localize-tools": "^0.5.0",
    "@rollup/plugin-node-resolve": "^13.1.2",
    "@rollup/plugin-sucrase": "^4.0.1",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/cookie": "^0.4.1",
    "@types/js-cookie": "^3.0.1",
    "@types/node": "^17.0.7",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "@web/rollup-plugin-copy": "^0.3.0",
    "@web/rollup-plugin-html": "^1.10.1",
    "esbuild": "^0.14.10",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "rollup": "^2.62.0",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-summary": "^1.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.5.4"
  }
}
