{
  "name": "projektwahl-lit",
  "version": "0.0.1",
  "license": "AGPL-3.0-or-later",
  "author": {
    "name": "Moritz Hedtke",
    "email": "Moritz.Hedtke@t-online.de"
  },
  "bugs": {
    "url": "https://github.com/mohe2015/projektwahl-lit/issues"
  },
  "homepage": "https://github.com/mohe2015/projektwahl-lit",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohe2015/projektwahl-lit.git"
  },
  "description": "Software to manage choosing projects and automatically assigning people to projects.",
  "type": "module",
  "scripts": {
    "prepare": "echo test",
    "format": "npm exec --package=prettier -- prettier --ignore-path .gitignore --write .",
    "format:check": "npm exec --package=prettier -- prettier --ignore-path .gitignore --check .",
    "rebuild": "node-pre-gyp rebuild -C ./node_modules/argon2",
    "test": "SELENIUM_BROWSER=chrome node  --experimental-loader ./src/loader.js --enable-source-maps tests/e2e/welcome.js",
    "lint": "npm exec --package=eslint --package=@typescript-eslint/eslint-plugin --package=eslint-config-prettier -- eslint .",
    "lint:fix": "npm exec --package=eslint --package=@typescript-eslint/eslint-plugin --package=eslint-config-prettier -- eslint --fix .",
    "setup": "node --experimental-loader ./src/loader.js --enable-source-maps ./src/server/setup.js",
    "server": "node --experimental-loader ./src/loader.js --enable-source-maps --experimental-import-meta-resolve ./src/server/index.js",
    "localize-extract": "npm exec --package=@lit/localize-tools -- lit-localize extract",
    "localize-build": "npm exec --package=@lit/localize-tools -- lit-localize build",
    "typecheck": "tsc",
    "lit-analyze": "npm exec --package=lit-analyzer -- lit-analyzer --strict --rules.no-unknown-attribute off src",
    "build": "esbuild --format=esm --bundle src/client/pw-app.ts --charset=utf8 --define:window.PRODUCTION=true --entry-names=[dir]/[name]-[hash] --sourcemap --analyze --outdir=dist --minify-whitespace --minify-identifiers --minify-syntax --tree-shaking=true --minify",
    "purgecss": "npm exec --package=purgecss -- purgecss --css node_modules/bootstrap/dist/css/bootstrap.css --content dist/*.js --output dist/bootstrap.min.css --font-face --keyframes --variables"
  },
  "dependencies": {
    "@dev.mohe/argon2": "^0.29.0",
    "@lit-labs/task": "^1.1.0",
    "@lit/localize": "^0.11.1",
    "bootstrap": "^5.1.3",
    "cookie": "^0.4.1",
    "js-cookie": "^3.0.1",
    "lit": "^2.1.1",
    "openid-client": "^5.1.2",
    "postgres": "mohe2015/postgres#patch-1",
    "zod": "^3.11.6"
  },
  "dependenciesComments": {
    "hot-esm": "1.2.2",
    "lit": "monorepos can't be installed from git afaik and also it probably doesnt work by default",
    "postgres": "v2.0.0-beta.11",
    "typescript": "installing the dependencies is probably more dangerous...",
    "zod": "doesn't work from git because no prepare script. Should probably be installable without any building"
  },
  "devDependencies": {
    "@types/cookie": "^0.4.1",
    "@types/js-cookie": "^3.0.1",
    "@types/node": "^17.0.10",
    "@types/selenium-webdriver": "^4.0.16",
    "esbuild": "^0.14.13",
    "typescript": "^4.5.5"
  },
  "optionalDependenciesComments": {
    "@lit/localize-tools": "^0.5.0",
    "selenium-webdriver": "^4.1.1"
  },
  "optionalDependencies": {
    "eslint-config-prettier": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^5.10.0"
  }
}
